<div class="other-messages">
  <div class="message-info">
    <p class="trim" style="color: <%= message.user.color %>"><strong><%= message.user.username %></strong></p>
    <p style="color: #979A97">
        <% if Time.now - message.created_at > 432000 %>
        <%= message.created_at.strftime("%d/%m/%y %H:%M") %>
        <% elsif Time.now - message.created_at > 172800 %>
        <%= message.created_at.strftime("%a %H:%M") %>
        <% elsif Time.now - message.created_at > 86400 %>
        <%= message.created_at.strftime("%a %H:%M") %>
        <% else %>
        <%= message.created_at.strftime("%H:%M") %>
        <% end %>
      </p>
  </div>
  <% if message.document? %>
    <div class="content-media">
      <%= link_to family_document_path(message.document.family, message.document) do %>
        <%= cl_image_tag message.content %>
          <% end %>
    </div>
<!--
  <%# elsif url = message.content.match(/(https?:\/\/www\.\w+\.[a-z]{2,3}\/\w*\/?\w*)/) %>
    <a href="<%#= message.content %>" target="_blank" style="color: blue"><%#= message.content %></a> -->
    <% else %>
    <div class="other-msg-content">
      <%= Rinku.auto_link(message.content, :all, 'target="_blank"').html_safe %>
    </div>
  <% end %>
</div>
